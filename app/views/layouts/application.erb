<head>
  <%=stylesheet_link_tag 'style'%>
  <%= javascript_include_tag :defaults %>
  <%= include_colorbox_assets %>
  <%= yield :head %>
  
  <script type="text/javascript">
  $(document).ready(function() {
  setTimeout(function() {
          $("#flash_error").hide('blind', {}, 500)
      }, 5000);
      
      setTimeout(function() {
              $("#flash_notice").hide('blind', {}, 500)
          }, 5000);
    });
  </script>
</head>

<body>
<div id='header'>
  <div class='content'>
    <%= render :partial=> 'users/user_bar'%>
    <br class='clear'>
    <a href='/'>
    <div id='logo_box'>
    <div id='logo'>
    </div>
    </div>
    </a>
    
    
    <div class='header_link_container'>
    <%=link_to 'Whats For Dinner', '#', :class => 'header_link'%>
    <% if current_user %>
    <%=link_to 'My Kitchen', {:controller => 'user_ingredients', :action => 'index'}, :class => 'header_link'%>
    <% end %>
    <%=link_to 'Search', {:controller => 'search', :action => 'show'}, :class => 'header_link'%>
    <%=link_to 'Contribute Recipes', {:controller => 'recipes', :action => 'new'}, :class => 'header_link'%>
    
    </div>
  </div>
</div>
<br class='clear'>
<div id='main_content' class='content'>
<%= render :partial=> 'base/flash_error' unless flash[:error].blank?%>
<%= render :partial=> 'base/flash_notice' unless flash[:notice].blank?%>
  <%=yield%>
</div>
</body>
